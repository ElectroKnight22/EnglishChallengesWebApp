@using EnglishChallengesWebApp.Resources.Model

@inherits LevelDisplay

<div>
    <label style="font-size:16px; text-align:center;">@LevelTitle</label>
</div>
<div id="QuestionImageLayout" style="display:flex; flex-wrap:wrap; justify-content:center; align-items:center; padding:25px; width:auto; height:50vh;">
    <img src=@CurrentQuestion.ImageSource style="max-width:100%; max-height:100%;" />
</div>
<div style="display:flex; justify-content:center; padding:10px;">
    <label style="font-size:16px; text-align:center;">@Prompt</label>
</div>
<div style="display:flex; justify-content:center;">
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(AnswerTexts[0])" style="margin:10px;"><b>@AnswerTexts[0]</b></button>
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(AnswerTexts[1])" style="margin:10px;"><b>@AnswerTexts[1]</b></button>
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(AnswerTexts[2])" style="margin:10px;"><b>@AnswerTexts[2]</b></button>
</div>
<div style="display:flex; justify-content:center;">
    <button class="btn btn-primary" id="NextBtn" disabled="@(!IsAnsweringDisabled)" @onclick="LoadNextQuestion" style="margin:10px;">NEXT</button>
    <button class="btn btn-primary" id="HintBtn" @onclick="GiveHint" style="margin:10px;">HINT</button>
</div>
<div style="display:flex; justify-content:center;">
    <button class="btn btn-primary" id="ResetBtn" @onclick="PromptReplay" style="margin:10px;">Reset Level</button>
</div>



