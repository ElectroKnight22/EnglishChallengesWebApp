@using EnglishChallengesWebApp.Resources.Model

@inherits LevelDisplay

<div>
    <label style="font-size:16px; text-align:center;">@LevelTitle</label>
</div>
<div style="display:flex; justify-content:center; padding:25px;">
    <div id="QuestionImageLayout" style="display:flex; flex-wrap:wrap; justify-content:center; align-items:center;">
        <img src=@CurrentQuestion.ImageSource />
    </div>
</div>
<label style="font-size:16px; text-align:center;">Please select the best choice.</label>
<div style="display:flex; justify-content:center;">
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(0)" style="margin-right:25px;">@AnswerTexts[0]</button>
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(1)" style="margin-right:25px;">@AnswerTexts[1]</button>
    <button disabled=@IsAnsweringDisabled @onclick="() => ChooseAnswer(2)" style="margin-right:25px;">@AnswerTexts[2]</button>
</div>
<div style="display:flex; justify-content:center;">
    <button class="btn btn-primary" id="HintBtn" @onclick="GiveHint" style="margin-top:25px;">HINT</button>
</div>
<div style="display:flex; justify-content:center;">
    <button class="btn btn-primary" id="ResetBtn" @onclick="ResetLevel" style="margin-top:50px;">Reset Level</button>
</div>



